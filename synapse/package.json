{
  "name": "synapse",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config=jest.config.mjs",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch --config=jest.config.mjs",
    "test:api": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' tsx scripts/test-apis.ts",
    "test:openalex": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' tsx scripts/test-openalex.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "postinstall": "prisma generate",
    "tsc:scripts": "tsc -p tsconfig.scripts.json",
    "build:scripts": "tsc -p tsconfig.scripts.json && tsc-alias -p tsconfig.scripts.json"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^1.0.12",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@google/generative-ai": "^0.1.0",
    "@mui/icons-material": "^5.15.1",
    "@mui/material": "^5.15.1",
    "@mui/material-nextjs": "^5.15.1",
    "@mui/styled-engine": "^5.15.1",
    "@mui/styled-engine-sc": "^6.0.0-alpha.6",
    "@neondatabase/serverless": "^0.6.0",
    "@prisma/client": "^5.7.1",
    "@sentry/nextjs": "^9.40.0",
    "@upstash/ratelimit": "^2.0.5",
    "@upstash/redis": "^1.35.1",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "chromium-bidi": "^7.1.1",
    "critters": "^0.0.23",
    "d3": "^7.8.5",
    "dotenv": "^17.2.0",
    "framer-motion": "^10.16.16",
    "grok-api-ts": "^1.1.2",
    "next": "14.0.4",
    "next-auth": "^4.24.5",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.8.0",
    "styled-components": "^6.1.6",
    "zod": "^3.22.4"
  },
  "type": "module",
  "devDependencies": {
    "@next/bundle-analyzer": "^14.0.4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/d3": "^7.4.3",
    "@types/jest": "^29.5.14",
    "@types/lru-cache": "^7.10.9",
    "@types/node": "^20.19.9",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/styled-components": "^5.1.34",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "cypress": "^13.6.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "null-loader": "^4.0.1",
    "prisma": "^5.7.1",
    "start-server-and-test": "^2.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "plugin:@typescript-eslint/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "rules": {
      "react/no-unescaped-entities": "error",
      "react/no-children-prop": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
