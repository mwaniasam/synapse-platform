{
  "manifest_version": 3,
  "name": "Synapse - Cognitive Learning Accelerator",
  "version": "2.0.0",
  "description": "Advanced productivity and learning analytics with dark mode, typing speed detection, and comprehensive monitoring",
  "permissions": ["storage", "activeTab", "tabs", "alarms", "notifications", "system.display"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Synapse Learning Assistant"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["dashboard.html", "chart.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
