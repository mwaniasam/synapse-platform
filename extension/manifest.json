{
  "manifest_version": 3,
  "name": "Synapse - Cognitive Learning Accelerator",
  "version": "2.0.0",
  "description": "Advanced cognitive learning acceleration with real-time activity tracking, productivity analytics, and adaptive content optimization",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms",
    "notifications",
    "system.display",
    "background",
    "scripting"
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Synapse Learning Assistant"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["dashboard.html", "*.js", "*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
